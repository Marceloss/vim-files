" vim: filetype=vim
filetype indent plugin on
set ignorecase smartcase gdefault showmatch hlsearch incsearch
"enable auto write
set autowriteall
"automatically reload the files if they were modified outside vim
set autoread
"set the buffer to become hidden instead of preventing the user from changing to another buffer
set hidden
"set proper encoding for files
set encoding=utf-8
set fileencoding=utf-8
"spaces instead of tabs
set sta
set et
"set auto indent and smart indent
set ai
set si
"enable syntax highligh
syntax on
"allow backspacing over everything in insert mode
set backspace=indent,eol,start
"set the history to display more itens
set history=100
"set the undo to have a thousand entries
set undolevels=1000
"folding settings
set foldmethod=indent   "fold based on indent
set foldnestmax=10      "deepest fold level
set nofoldenable        "dont fold by default
"improve the autocomplete menu
set completeopt=longest,menuone,preview
"disable going to the menu when pressing alt
set wak=no
"disable swap files
set noswf
" reducing update time to 0.5s
set updatetime=500
" saving when losing focus
au FocusLost * :wa
" change the invisible chars
set listchars=tab:▸\ ,eol:¬,extends:❯,precedes:❮,trail:⌴
set showbreak=↪
set fillchars=diff:⣿,vert:│
"enable powerline
let g:enable_powerline = 1
